<div class="mx-auto md:w-2/3 w-full flex flex-col items-center">

  <%= link_to root_path do %>
    <%= image_tag asset_path("kittymapapp.png"), class:"object-cover", alt: 'kittymap.app' %>
  <% end %>
  <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-rose font-lekton font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="mx-3">
     <%= render @cat %>

    <h4 class="font-lekton text-rose text-xl"><%= "Kitty Comments:" if @cat.comments.present? %></h4>
    <%= render @cat.comments %>

    <%= render 'comments/form' if current_user%>

  </div>
</div>
