<div id="<%= dom_id cat %>">

  <p class="my-5">
   <h2> 
   <%= link_to cat.alias, cat, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
   </h2>
     <% if action_name != "show" && (current_user.is_admin == true or current_user == cat.user) %>
    <%= link_to 'Edit this cat', edit_cat_path(cat), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>

  <% end %>
  </p>
  <p class="my-5">
  <% if cat.photo.representable? %>
        <%= image_tag cat.photo.representation(resize_to_limit: [250, 250]) %>
        <%end%>
  </p>
  <p class="my-5">
    <strong class="block font-medium mb-1">Spotted by:</strong>
    <%= cat.user.username %>
  </p>




  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= cat.description %>
  </p>

    <hr class="mt-6">


</div>
