<div id="<%= dom_id cat %>" class="w-full items-center">

   <h1> 
   <%= link_to cat.alias, cat, style: "color:  #f92a82; font-family: 'Lekton'; font-size: 2rem; hover: underline" %>
   </h1>

  <p class="">
  <% if cat.photo.representable? %>
    <% if Rails.env.production? %>
        <%= cl_image_tag(cat.photo.key, width: 150, height: 100, responsive: true, crop: "scale" ) %>
    <% else %>
        <%= image_tag cat.photo.representation(resize_to_limit: [250, 200]), class: "rounded-md" %>
    <% end %>
  <%end%>
  </p>

  <p>
    <strong class="">Spotted by:</strong>
    <%= cat.user == current_user ? 'You' : cat.user.username %>
  </p>

  <p class="">
    <strong class="">Description:</strong>
    <%= cat.description %>
  </p>

  <hr class="pt-3">


</div>



