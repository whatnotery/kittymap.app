<div id="<%= dom_id cat %>" class="">

   <h1> 
   <%= link_to cat.alias, cat, style: "color:  #f92a82; font-family: 'Lekton'; font-size: 2rem; hover: underline" %>
   </h1>

  <p class="">
  <% if cat.photo.representable? %>
    <% if Rails.env.production? %>
        <%= cl_image_tag(cat.photo.key, width: 300, height: 250, crop: :fill  ) %>
    <% else %>
        <%= image_tag cat.photo.representation(resize_to_limit: [250, 200]), class: "rounded-md" %>
    <% end %>
  <%end%>
  </p>

  <p class="font-lekton text-rose text-lg">
    <strong class="text-slateblue font-lekton">Spotted by:</strong>
    <% if current_user and current_user == cat.user %>
    You
    <% else %>
    <%= link_to cat.user.username, user_path(cat.user.id) %>
    <% end %>
    <br>
    <strong class="text-slateblue font-lekton">Description:</strong>
    <%= cat.description %>
  </p>

  
  <%= js_map [{latitude:"#{cat.latitude}", longitude:"#{cat.longitude}"}],
  height: "15vh", 
  width: "100%",
  markers: {color: "#47d2dc"}, 
  tooltips: {html: true, hover: false}, 
  style: "mapbox://styles/mapbox/light-v11" if action_name == 'show' %>


  <hr class="">


</div>



