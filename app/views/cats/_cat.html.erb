<div id="<%= dom_id cat %>" class="">

  <p class="">
   <h2> 
   <%= link_to cat.alias, cat, class: "" %>
   </h2>
     <% if action_name != "show" && (current_user.is_admin == true or current_user == cat.user) %>
    <%= link_to 'Edit this cat', edit_cat_path(cat), class: "" %>

  <% end %>
  </p>
  <p class="">
  <% if cat.photo.representable? %>
        <%= image_tag cat.photo.representation(resize_to_limit: [250, 250]) %>
        <%end%>
  </p>
  <p class="">
    <strong class="">Spotted by:</strong>
    <%= cat.user.username %>
  </p>




  <p class="">
    <strong class="">Description:</strong>
    <%= cat.description %>
  </p>

    <hr class="">


</div>
